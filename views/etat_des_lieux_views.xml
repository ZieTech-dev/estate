<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_estate_etat_des_lieux_form" model="ir.ui.view">
        <field name="name">estate.etat.des.lieux.form</field>
        <field name="model">estate.etat.des.lieux</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="État des lieux">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="date"/>
                        <field name="responsable_id"/>
                        <field name="location_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_estate_etat_des_lieux_kanban" model="ir.ui.view">
        <field name="name">estate.etat.des.lieux.kanban</field>
        <field name="model">estate.etat.des.lieux</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="location_id"/>
                <field name="date"/>
                <field name="etat_general"/>  <!-- Assure-toi que ce champ existe -->
                <templates>
                    <t t-name="card">  <!-- Changement de "kanban-box" à "card" -->
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_details">
                                <strong><field name="location_id"/></strong><br/>
                                <span>Date: <field name="date"/></span><br/>
                                <span>État: <field name="etat_general"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>